{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true
  },
  "include": [
    "src/**/*"
  ]
}
